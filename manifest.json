{
  "manifest_version": 2,

  "name": "Stack Chat",
  "description": "Chat about Stack Overflow questions and answers directly on the question page.",
  "version": "0.1",
  
  "icons": { 
    "128": "assets/img/icon_large.png"
  },
  
  "background":{
    "scripts": ["assets/js/eventPage.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": {
      "19": "assets/img/icon_small.png",
      "38": "assetes/img/icon_small.png"
    },
    "default_title": "Stack Chat"
  },
  
  "content_scripts": [
    {
      "matches": ["http://stackoverflow.com/questions/*", "http://stackoverflow.com/a/*"],
      "js": ["assets/js/injector.js"]
    }
  ],
  
  "permissions": [
    "tabs"
  ]
}