{
  "manifest_version": 2,

  "name": "Stack Chat",
  "description": "Chat about Stack Overflow questions and answers directly on the question page.",
  "version": "0.1",
  
  "icons": { 
    "128": "assets/img/icon_large.png"
  },
  
  "background":{
    "scripts": ["assets/js/eventPage.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": {
      "19": "assets/img/icon_small.png",
      "38": "assets/img/icon_small.png"
    },
    "default_title": "Stack Chat"
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "web_accessible_resources": ["views/chat_panel.html"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}